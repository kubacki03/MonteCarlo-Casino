@{
    ViewData["Title"] = "Home Page";
}
<h1 class="text-center">MonteCarlo</h1>

@if (User.Identity.IsAuthenticated)
{
    <div class="d-flex justify-content-center gap-3 mb-3">
        <div class="card text-center bg-dark" style="width: 18rem;">
            <img src="~/images/zdjecie_automaty.png" class="card-img-top w-100 h-auto" alt="Obraz_Automatow">
            <div class="card-body">
                <h5 class="card-title">Automaty</h5>
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Slotsy">Graj!</a>
            </div>
        </div>

        <div class="card text-center bg-dark" style="width: 18rem;">
            <img src="~/images/zdjecie_zdrapka.png" class="card-img-top w-100 h-auto" alt="Obraz_Zdrapki">
            <div class="card-body">
                <h5 class="card-title">Zdrapki</h5>
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Zdrapki">Graj!</a>
            </div>
        </div>

        <div class="card text-center bg-dark" style="width: 18rem;">
            <img src="~/images/zdjecie_kosci.png" class="card-img-top w-100 h-auto" alt="Obraz_Kosci">
            <div class="card-body">
                <h5 class="card-title">Kości</h5>
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Kosci">Graj!</a>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center gap-3 mb-3">
        <div class="card text-center bg-dark" style="width: 18rem;">
            <img src="~/images/zdjecie_wyscigiKonne.png" class="card-img-top w-100 h-auto" alt="Obraz_Koni">
            <div class="card-body">
                <h5 class="card-title">Wyścigi konne</h5>
                <a class="btn btn-primary" asp-area="" asp-controller="Konie" asp-action="KonieMenu">Graj!</a>
            </div>
        </div>

        <div class="card text-center bg-dark" style="width: 18rem;">
            <img src="~/images/zdjecie_ruletka.jpg" class="card-img-top w-100 h-auto" alt="Obraz_Ruletka">
            <div class="card-body">
                <h5 class="card-title">Ruletka</h5>
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Ruletka">Graj!</a>
            </div>
        </div>

        <div class="card text-center bg-dark" style="width: 18rem;">
            <img src="~/images/zdjecie_mecze.jpg" class="card-img-top w-100 h-auto" alt="Obraz_Boiska">
            <div class="card-body">
                <h5 class="card-title">Mecze</h5>
                <a class="btn btn-primary" asp-area="" asp-controller="FootballBet" asp-action="getAvailableMatches">Graj!</a>
            </div>
        </div>
    </div>
}
